apiVersion: batch/v1
kind: CronJob
metadata:
  name: policy-delete-<CLUSTER_NAME>
spec:
  schedule: "<CRON_SCHEDULE>"
  jobTemplate:
    spec:
      template:
        spec:
          serviceAccountName: my-cronjob
          containers:
          - name: policy-delete
            image: quay.io/haoqing/acm-workload:latest
            imagePullPolicy: Always
            command:
            - /bin/sh
            - -c
            - date; MANAGED_CLUSTER_NAME=<CLUSTER_NAME> make clean-policy
          restartPolicy: OnFailure

